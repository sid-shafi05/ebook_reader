<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1100.0"
            style="-fx-background-color: #2b2b2b;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.bookreader.BookController">

   <!-- TOP BAR -->
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="52.0" spacing="14.0"
            style="-fx-background-color: #1e1e1e; -fx-border-color: #3a3a3a; -fx-border-width: 0 0 1 0; -fx-padding: 8 24 8 16;">
         <children>
            <Button onAction="#onBackButtonClick" prefHeight="36.0" prefWidth="130.0"
                    styleClass="back-button" text="â† Library">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Button>
            <Separator orientation="VERTICAL" style="-fx-background-color: #3a3a3a;" />
            <Label fx:id="bookTitleLabel"
                   style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;"
                   text="Book Title">
               <font><Font name="Segoe UI" size="14.0" /></font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="pageNumberLabel"
                   style="-fx-font-size: 13; -fx-text-fill: #9e9e9e;"
                   text="Page 1 of 1">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
         </children>
      </HBox>
   </top>

   <!-- PAGE VIEW â€” ScrollPane lets user scroll tall pages -->
   <center>
      <ScrollPane fx:id="pageScrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                  style="-fx-background: #2b2b2b; -fx-background-color: #2b2b2b;">
         <content>
            <StackPane style="-fx-background-color: #2b2b2b; -fx-padding: 20;">
               <!-- White page with drop shadow -->
               <StackPane style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 24, 0, 0, 4); -fx-background-color: white;"
                          StackPane.alignment="CENTER">
                  <ImageView fx:id="pdfView"
                             pickOnBounds="true"
                             preserveRatio="true"
                             smooth="true"
                             StackPane.alignment="CENTER" />
               </StackPane>
            </StackPane>
         </content>
      </ScrollPane>
   </center>

   <!-- BOTTOM TOOLBAR -->
   <bottom>
      <HBox alignment="CENTER" spacing="20.0"
            style="-fx-background-color: #1e1e1e; -fx-border-color: #3a3a3a; -fx-border-width: 1 0 0 0; -fx-padding: 12 30 12 30;">
         <children>
            <Button onAction="#prevButtonLogic" prefHeight="40.0" prefWidth="130.0"
                    styleClass="nav-button" text="â—„   Previous">
               <font><Font name="Segoe UI" size="14.0" /></font>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="bookmarkButton" onAction="#toggleBookmark"
                    prefHeight="38.0" prefWidth="38.0"
                    styleClass="bookmark-button" text="ðŸ”–">
               <font><Font size="17.0" /></font>
            </Button>

            <Button onAction="#showBookmarksPanel" prefHeight="40.0" prefWidth="140.0"
                    styleClass="view-bookmarks-button" text="ðŸ“‘   Bookmarks">
               <font><Font name="Segoe UI" size="13.0" /></font>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#nextButtonLogic" prefHeight="40.0" prefWidth="130.0"
                    styleClass="nav-button" text="Next   â–º">
               <font><Font name="Segoe UI" size="14.0" /></font>
            </Button>
         </children>
      </HBox>
   </bottom>

</BorderPane>
