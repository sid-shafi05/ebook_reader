<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="616.0" prefWidth="986.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bookreader.Controller">
   <left>
      <VBox prefHeight="519.0" prefWidth="151.0" styleClass="left-sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="143.0" prefWidth="151.0">
               <children>
                  <ImageView fx:id="iconImage" fitHeight="67.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <effect>
                        <Glow />
                     </effect>
                     <image>
                        <Image url="@../images/icon.png" />
                     </image></ImageView>
                  <Label fx:id="iconText" alignment="CENTER" prefHeight="25.0" prefWidth="116.0" text="StackShelf">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="allBtn" mnemonicParsing="false" prefHeight="30.0" onAction="#changeToAllBooks" prefWidth="151.0" text="All">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button  fx:id="favBtn" mnemonicParsing="false" prefHeight="24.0" onAction="#changetoFavourites" prefWidth="153.0" text="Favourites">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button  fx:id="catBtn" mnemonicParsing="false" prefHeight="24.0" onAction="#changeToCategories" prefWidth="157.0" text="Categories">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Region prefHeight="377.0" prefWidth="151.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="helpBtn" mnemonicParsing="false" prefHeight="24.0" prefWidth="151.0" text="Help">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button  fx:id="setBtn" mnemonicParsing="false" prefHeight="24.0" prefWidth="152.0" text="Settings">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <fx:define>
            <ToggleGroup fx:id="viewGroup" />
         </fx:define>

         <top>
            <VBox spacing="10" style="-fx-background-color: transparent; -fx-padding: 15 25 10 25;" styleClass="top-bar">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <children>
                              <Button fx:id="addBtn" styleClass="top-bar-button" text="Add Book" onAction="#onAddBookButtonClick" >
                                 <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                       <image><Image url="@../images/plus.png" /></image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="addFBtn" styleClass="top-bar-button" text="Add Folder">
                                 <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                       <image><Image url="@../images/plus.png" /></image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox alignment="CENTER_RIGHT" spacing="12">
                           <children>
                              <TextField prefWidth="350.0" promptText="Search in Library" styleClass="text-field" />
                              <HBox style="-fx-border-color: #0f3460; -fx-border-radius: 5;">
                                 <children>
                                    <ToggleButton mnemonicParsing="false" selected="true" styleClass="toggle-button" text="Grid">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="$viewGroup" />
                                       </toggleGroup></ToggleButton>
                                    <ToggleButton mnemonicParsing="false" styleClass="toggle-button" text="List">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="$$viewGroup" />
                                       </toggleGroup></ToggleButton>
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </HBox>

                  <HBox alignment="CENTER_LEFT" spacing="30" styleClass="sort-container">
                     <children>
                        <Label fx:id="titleLabel" onMouseClicked="#sortByTitle" styleClass="sort-label" text="Title" />
                        <Label fx:id="authorLabel" onMouseClicked="#sortByAuthor" styleClass="sort-label" text="Author" />
                        <Label fx:id="dateLabel" onMouseClicked="#sortByDate" styleClass="sort-label" text="Date " />
                        <Label fx:id="progressLabel" onMouseClicked="#sortByProgress" styleClass="sort-label" text="Progress" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" />
               </children></StackPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
