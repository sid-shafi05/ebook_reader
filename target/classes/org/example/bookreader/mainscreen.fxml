<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.bookreader.Controller">

   <!-- LEFT SIDEBAR -->
   <left>
      <VBox prefWidth="162.0" styleClass="left-sidebar" BorderPane.alignment="CENTER"
            style="-fx-min-height: 600;">
         <children>

            <!-- LOGO AREA -->
            <VBox alignment="CENTER" style="-fx-padding: 24 10 20 10; -fx-spacing: 4;">
               <children>
                  <ImageView fx:id="iconImage" fitHeight="52.0" fitWidth="52.0"
                             pickOnBounds="true" preserveRatio="true">
                     <effect><Glow /></effect>
                     <image><Image url="@../images/icon.png" /></image>
                  </ImageView>
                  <Label fx:id="iconText" alignment="CENTER" text="StackShelf"
                         style="-fx-text-fill: #e94560; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 4 0 0 0;" />
                  <Label text="eBook Reader"
                         style="-fx-text-fill: #555577; -fx-font-size: 10px;" />
               </children>
            </VBox>

            <!-- DIVIDER -->
            <Region prefHeight="1" prefWidth="140"
                    style="-fx-background-color: #1e1e35; -fx-margin: 0 10;" />

            <!-- NAV BUTTONS -->
            <VBox spacing="4" style="-fx-padding: 12 0 0 0;">
               <children>
                  <Button fx:id="allBtn" mnemonicParsing="false"
                          onAction="#changeToAllBooks"
                          text="ðŸ“š   Library"
                          prefHeight="44.0">
                     <font><Font name="Segoe UI" size="13.0" /></font>
                  </Button>
                  <Button fx:id="favBtn" mnemonicParsing="false"
                          onAction="#changetoFavourites"
                          text="â¤   Favourites"
                          prefHeight="44.0">
                     <font><Font name="Segoe UI" size="13.0" /></font>
                  </Button>
                  <Button fx:id="catBtn" mnemonicParsing="false"
                          onAction="#changeToCategories"
                          text="ðŸ—‚   Categories"
                          prefHeight="44.0">
                     <font><Font name="Segoe UI" size="13.0" /></font>
                  </Button>
                  <Button fx:id="statsBtn" mnemonicParsing="false"
                          onAction="#changeToStats"
                          text="ðŸ“Š   Statistics"
                          prefHeight="44.0">
                     <font><Font name="Segoe UI" size="13.0" /></font>
                  </Button>
               </children>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

         </children>
      </VBox>
   </left>

   <!-- CENTER CONTENT -->
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">

         <!-- TOP BAR: Add Book + Search + Sort labels -->
         <top>
            <VBox fx:id="topBar" spacing="10"
                  style="-fx-background-color: transparent; -fx-padding: 15 25 10 25;"
                  styleClass="top-bar">
               <children>
                  <!-- Row 1: Add Book + Search -->
                  <HBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Button fx:id="addBtn" onAction="#onAddBookButtonClick"
                                styleClass="top-bar-button" text="+ Add Book" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="searchField" prefWidth="320.0"
                                   promptText="Search in Library"
                                   styleClass="text-field" />
                     </children>
                  </HBox>

                  <!-- Row 2: Sort labels -->
                  <HBox alignment="CENTER_LEFT" spacing="30" styleClass="sort-container">
                     <children>
                        <Label fx:id="titleLabel" onMouseClicked="#sortByTitle" styleClass="sort-label" text="Title" />
                        <Label fx:id="dateLabel" onMouseClicked="#sortByDate" styleClass="sort-label" text="Date" />
                        <Label fx:id="progressLabel" onMouseClicked="#sortByProgress" styleClass="sort-label" text="Progress" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>

         <!-- CONTENT AREA: pages load here -->
         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </StackPane>
         </center>

      </BorderPane>
   </center>

</BorderPane>
