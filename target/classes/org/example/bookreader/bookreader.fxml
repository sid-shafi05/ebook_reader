<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="709.0" prefWidth="1024.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.bookreader.BookController">
    <center>
        <ScrollPane prefHeight="524.0" prefWidth="986.0" BorderPane.alignment="CENTER">
            <content>
                <ImageView fx:id="pdfView" fitHeight="524.0" fitWidth="986.0" pickOnBounds="true" preserveRatio="true" />
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox fx:id="navigationBar" alignment="CENTER" prefHeight="53.0" prefWidth="986.0" BorderPane.alignment="CENTER" spacing="20">
            <children>
                <Button mnemonicParsing="false" onAction="#prevButtonLogic" text="&lt;" textOverrun="CENTER_ELLIPSIS">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Label fx:id="pageNumberLabel" text="Page 1 of 1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#nextButtonLogic" text="&gt;">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>
    <top>
        <HBox prefHeight="54.0" prefWidth="986.0" BorderPane.alignment="CENTER" style="-fx-padding: 10;">
            <children>
                <Button mnemonicParsing="false" onAction="#onBackButtonClick" text="Back" textFill="#100c0c">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </top>
</BorderPane>