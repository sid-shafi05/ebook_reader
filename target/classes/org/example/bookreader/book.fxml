<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER"
      spacing="8"
      prefHeight="250.0"
      prefWidth="150.0"
      style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 2);"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="bookCoverView"
                 fitHeight="180.0"
                 fitWidth="130.0"
                 pickOnBounds="true"
                 preserveRatio="true"
                 style="-fx-background-color: #e0e0e0;" />

      <Label fx:id="bookTitleLabel"
             alignment="CENTER"
             prefWidth="130.0"
             wrapText="true"
             maxHeight="50.0"
             text="Book Name"
             style="-fx-font-weight: bold; -fx-text-fill: #333333;">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </children>
</VBox>