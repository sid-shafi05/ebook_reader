<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<VBox styleClass="book-card" prefWidth="200" prefHeight="220"
      alignment="TOP_CENTER" spacing="5"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.bookreader.BookController">

   <AnchorPane>
      <ImageView fx:id="coverView" fitWidth="150" fitHeight="120"
                 preserveRatio="true"/>

      <StackPane fx:id="deleteButton" prefWidth="20" prefHeight="20"
                 styleClass="delete-button"
                 AnchorPane.topAnchor="1.5"
                 AnchorPane.rightAnchor="1.5">
         <Label text="-" styleClass="delete-text"/>
      </StackPane>
   </AnchorPane>

   <Label fx:id="titleLabel" styleClass="book-title" wrapText="true" maxWidth="130"/>
   <Label fx:id="pagesLabel" styleClass="pages-label"/>
   <ProgressBar fx:id="progressBar" prefWidth="100" prefHeight="10"
                styleClass="book-progress"/>
</VBox>